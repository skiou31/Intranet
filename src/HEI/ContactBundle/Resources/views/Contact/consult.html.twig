{% extends 'HEICoreBundle::layout.html.twig' %}

{% block imports %}
    {{ parent() }}
    {% javascripts
        '@HEIContactBundle/Resources/public/js/jquery-3.2.1.min.js'
        '@HEIContactBundle/Resources/public/js/jquery.dataTables.min.js'
        '@HEIContactBundle/Resources/public/js/dataTables.bootstrap4.min.js'
    %}
        <script src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% stylesheets '@HEIContactBundle/Resources/public/css/dataTables.bootstrap4.min.css' %}
        <link rel="stylesheet" href="{{ asset_url }}">
    {% endstylesheets %}
{% endblock %}

{% block title %}{{ parent() }} - Contact{% endblock %}

{% block body %}
    <div class="row" style="padding: 1% 0 1% 0">
        <div class="col-md-12">
            <div class="card">
                <div class="card-body text-center">
                    <div class="text-right">
                        <a href="#" class="card-link"><i class="far fa-edit fa-2x"></i></a>
                    </div>
                    <h4 class="card-title">{{ contact.civilite }} {{ contact.nom }} {{ contact.prenom }}</h4>
                    <h6 class="card-subtitle mb-2 text-muted">Ajouté le {{ contact.dateAjout.date }}</h6>
                    <p class="card-text">
                        {{ contact.adresse }}<br />
                        {{ contact.codePostal }}, {{ contact.ville }}
                    </p>
                    <p class="card-text"><a href="mailto:{{ contact.email }}">{{ contact.email }}</a></p>
                    <p class="card-text">{{ contact.telephone }}</p>
                    <p class="card-text">Origine : {{ contact.origine }}, {{ contact.origineDetail }}</p>
                    <p class="card-text">Commercial : {{ contact.commercial }}</p>
                    <p class="card-text">Commentaire : {{ contact.commentaire }}</p>
                </div>
            </div>
        </div>
    </div>
    <div class="row justify-content-around" style="padding: 1% 0 1% 0">
        <div class="col-md-2">
            <button type="button" class="btn btn-outline-dark btn-block">Photos</button>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-outline-dark btn-block">Devis</button>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-outline-dark btn-block">Plans</button>
        </div>
    </div>

    <div class="row justify-content-around" style="padding: 1% 0 1% 0">
        <div class="col-md-2">
            <button type="button" class="btn btn-outline-dark btn-block">Administratif</button>
        </div>
        <div class="col-md-2">
            <button type="button" class="btn btn-outline-dark btn-block">Chèque</button>
        </div>
    </div>

    <div class="row" style="padding: 1% 0 1% 0">
        <div class="col">
            <div class="btn-group" style="width: 100%" role="group" aria-label="Avancement du contact">
                <button class="btn btn-primary btn-block" style="margin: 0">Enregistré</button>
                <button class="btn btn-secondary btn-block" style="margin: 0">Devis ajouté</button>
                <button class="btn btn-secondary btn-block" style="margin: 0">Signature</button>
                <button class="btn btn-secondary btn-block" style="margin: 0">DT / PC</button>
                <button class="btn btn-secondary btn-block" style="margin: 0">Démarrage</button>
                <button class="btn btn-secondary btn-block" style="margin: 0">Chantier</button>
                <button class="btn btn-secondary btn-block" style="margin: 0">Réception</button>
            </div>
        </div>
    </div>

    <script>
        $(document).ready(function () {
            $('#test').DataTable();
        })
    </script>
{% endblock %}